<blockquote class="blockquote text-center">
  <h1 class="display-3">Forgot Password??</h1>
</blockquote>

<form
  class="w-25 m-auto p-3 mt-5 border border-light border-3"
  action="/users/forgot-password"
  method="POST"
>
  <div class="row mb-3 m-auto">
    <label for="inputEmail3" class="col-sm-4 col-form-label">Email</label>
    <div class="col-sm-7">
      <input
        type="email"
        name="email"
        placeholder="Email"
        required
        class="form-control"
        id="inputEmail3"
      />
    </div>
  </div>

  <div class="col-3 mt-3 mx-auto">
    <button type="submit" class="btn btn-primary">Get Link</button>
  </div>
</form>
