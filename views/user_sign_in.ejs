<h1 style="text-align: center; margin: 2rem">Sign In</h1>

<form
  class="w-25 m-auto p-3 mt-5 border border-light border-3"
  action="/users/create-session"
  method="POST"
>
  <div class="row mb-3 m-auto">
    <label for="inputEmail3" class="col-sm-4 col-form-label">Email</label>
    <div class="col-sm-8">
      <input
        type="email"
        name="email"
        placeholder="Email"
        required
        class="form-control"
        id="inputEmail3"
      />
    </div>
  </div>
  <div class="row mb-3 m-auto">
    <label for="inputPassword3" class="col-sm-4 col-form-label">Password</label>
    <div class="col-sm-8">
      <input
        type="password"
        name="password"
        placeholder="Password"
        required
        class="form-control"
        id="inputPassword3"
      />
    </div>
  </div>
  <div class="d-flex justify-content-between">
    <div class="col-5 mt-3">
      <a
        style="text-decoration: none; font-size: 1rem"
        href="/users/forgot-password"
      >
        <p>Forgot Password?</p>
      </a>
    </div>
    <div class="col-3 mt-3">
      <button type="submit" class="btn btn-primary">Sign in</button>
    </div>
  </div>

  <div class="mt-4 fs-4 border-top text-center border-info p-2 mx-auto">
    <p>
      <a style="text-decoration: none" href="/users/auth/google">
        <img
          class="m-3"
          src="https://cdn-icons-png.flaticon.com/512/300/300221.png"
          style="width: 20px; text-decoration: none"
          alt=""
        />Google Sign In / Sign Up</a
      >
    </p>
  </div>
</form>
